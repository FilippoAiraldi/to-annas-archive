{
    "manifest_version": 3,
    "name": "To Anna's Archive",
    "short_name": "to-annas-archive",
    "version": "1.0.2",
    "author": "Filippo Airaldi",
    "homepage_url": "https://github.com/FilippoAiraldi/to-annas-archive",
    "description": "Quickly search your article in Anna's Archive",
    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "48": "icons/48x48.png",
        "64": "icons/64x64.png",
        "96": "icons/96x96.png",
        "128": "icons/128x128.png"
    },
    "action": {
        "default_title": "To Anna's!",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background-wrapper.js"
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "options_page": "options/options.html",
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    }
}
